@using BookingTicketFilm_NamGiang.Models
@model UserData

@{
    ViewBag.Title = "InputData";
}

<h2>InputData</h2>

@using (Html.BeginForm("SubmitData", "Home", FormMethod.Post))
{
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" />
        <br />
        <label for="mobile">Mobile:</label>
        <input type="text" id="mobile" name="Mobile" />
        <br />
        <input type="submit" value="Submit" />
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Add User Sucessfully',
            text: '@TempData["SuccessMessage"]',
            confirmButtonText: 'OK'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("OutputData", "Home")';
            }
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '@TempData["ErrorMessage"]',
            confirmButtonText: 'OK'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("InputData", "Home")';
            }
        });
    </script>
}
